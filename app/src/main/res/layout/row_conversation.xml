<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_88"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/conversationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_circle_read"
        android:layout_marginStart="@dimen/_16"
        android:layout_marginTop="@dimen/_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <!-- TODO: image for no unread items (friends) is: ic_circle_unread -->
    <!-- TODO: image for no unread items (groups) is: ic_circle_logo -->

    <TextView
        android:id="@+id/unreadCount"
        android:layout_width="@dimen/_40"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16"
        android:layout_marginTop="@dimen/_8"
        android:text="3"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSizeTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conversationStatus" />
    <!-- TODO: color for no unread items (friends) is: colorInactive -->
    <!-- TODO: content for no unread items is: first initial of friend -->
    <!-- TODO: no content for Groups -->


    <TextView
        android:id="@+id/participantNames"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_72"
        android:layout_marginTop="@dimen/_13"
        android:lines="1"
        android:text="Pragya Saxena"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- TODO only first name in comma separated list for Groups -->

    <TextView
        android:id="@+id/firstUnreadDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16"
        android:layout_marginTop="@dimen/_1"
        android:lines="1"
        android:text="Feb 12"
        android:textAlignment="viewEnd"
        android:textAppearance="@android:style/TextAppearance.Material.Caption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/participantNames" />
    <!-- TODO change date format: see github web code -->

    <TextView
        android:id="@+id/currentTopic"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Current Conversation Topic"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        app:layout_constraintBottom_toTopOf="@+id/firstUnreadCommentContent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/participantNames"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/firstUnreadCommentContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/currentTopic"
        android:layout_marginBottom="@dimen/_13"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/large_text"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textColor="@color/colorBody3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2" />
    <!-- TODO remove line break tags from content -->

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_16"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="395dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="@dimen/_72"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="@dimen/_72" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="@dimen/_16"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>